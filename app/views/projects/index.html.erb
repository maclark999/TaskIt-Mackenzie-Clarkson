
<div class="page-header">
  <%= link_to 'New Project', new_project_path, class: "btn btn-info pull-right" %>
  <h1>Projects</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
      <tr>
        <th>Name</th>
        <th>Tasks</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
    <% if current_user.admin? %>
      <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= link_to project.tasks.count, project_tasks_path(project) %></td>
        <td class = "text-right">
          <%= link_to "Edit", edit_project_path(project), class: "btn btn-info" %>
          <%= link_to "Delete", project_path(project), method: :delete, class: "btn btn-danger" %>
        <% end %>
    <% elsif %>
    <% Membership.all.each do |member| %>
    <% if member.user_id == current_user.id %>
      <tr>
        <td><%= link_to member.project.name, project_path(member.project) %></td>
        <td><%= link_to member.project.tasks.count, project_tasks_path(member.project) %></td>

        <td class = "text-right">
          <% if member.role == "owner"%>
          <%= link_to "Edit", edit_project_path(member.project_id), class: "btn btn-info" %>
          <%= link_to "Delete", project_path(member.project_id), method: :delete, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    <% end %>
    <% end %>
    </tbody>
  </table>
