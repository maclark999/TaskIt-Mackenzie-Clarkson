
<div class="page-header">
  <%= link_to 'New Project', new_project_path, class: "btn btn-info pull-right" %>
  <h1>Projects</h1>
</div>

<table class="table">
  <thead>
      <tr>
        <th>Name</th>
        <th>Tasks</th>
        <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.tasks.count, project_tasks_path(project) %>
        <td class = "text-right">
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-info"%>
          <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
