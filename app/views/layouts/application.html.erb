<!DOCTYPE html>
<html>
<head>
  <title>gCampMackenzieClarkson</title>
  <%= favicon_link_tag 'giphy.gif' %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">gCamp</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class = 'nav navbar-nav navbar-right'>
            <% if current_user %>
              <li><%=link_to current_user.full_name, user_path(current_user) %></li>
              <li><%= link_to 'Sign Out', signout_path %></li>
            <% else %>
              <li><%= link_to 'Sign Up', signup_path%></li>
              <li><%= link_to 'Sign In', signin_path%></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if flash[:notice] %>
    <div class="alert alert-success text-center"><%= flash[:notice] %></div>


    <% elsif flash[:alert] %>
    <div class="alert alert-danger text-center"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>

</body>
</div>
<div class = "container">
<footer>
  <hr>
  <div class="row">
  <div class="col-md-6">
    <!-- <a href="/about">About</a> -->
    <%= link_to "About", about_path %>
    |
    <%= link_to "Terms", terms_path %>
    |
    <%= link_to "FAQ", faq_path %>
    |
    <%= link_to "Users", users_path %>
    |
    <%= link_to "Projects", projects_path %>
  </div>

  <div class="col-md-6 text-right">
      <%= link_to (image_tag "linkedin.jpg", class: "img-footer"), "https://www.linkedin.com/in/mackenzieclarkson", target: "_blank" %>

      <%= link_to (image_tag "github.png", class: "img-footer"), "https://github.com/maclark999", target: "_blank" %>

      <%= link_to (image_tag "twitter.png", class: "img-footer"), "https://twitter.com/ahumanmackenzie", target: "_blank" %>

      <%= link_to (image_tag "galavanize.png", class: "img-footer"), "https://students.gschool.it/students/214", target: "_blank" %>

  </div>
</div>
</footer>
</div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>


</html>
