
<div class="page-header">
  <%= link_to 'New User', new_user_path, class: "btn btn-info pull-right" %>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user %></td>
        <td><% if user.id == current_user.id %>
        <%= mail_to user.email %>
        <% end %></td>

        <td class = "text-right">
          <% if user.id == current_user.id %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info"%>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
