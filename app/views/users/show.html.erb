<div class="page-header">
  <% if @user.id == current_user.id || current_user.admin? %>
  <%= link_to 'Edit', edit_user_path, class: "btn btn-info pull-right" %>
  <% end %>
  <h1><%= @user.full_name %></h1>
</div>

<ol class="breadcrumb">
  <li><a href="/users">Users</a></li>
  <li class="active"><%= @user.first_name.capitalize %></li>
</ol>

<dl class="dl-horizontal">
  <p><dt>First Name<dt><dd><%= @user.first_name.capitalize %></dd></p>
  <p><dt>Last Name<dt><dd><%= @user.last_name.capitalize %></dd></p>
    <% if @user.id == current_user.id || current_user.admin? %>
  <p><dt>Email<dt><dd><%= mail_to @user.email %></dd></p>
    <% end %>
</dl>
