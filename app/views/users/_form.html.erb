<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :first_name %></label>
  <div class="form-controls col-md-4">
    <input class="form-control"<%= f.text_field :first_name %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :last_name %></label>
  <div class="form-controls col-md-4">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :email %></label>
  <div class="form-controls col-md-4">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>


<div class="form-group">
  <div class="actions">
    <div class="col-md-offset-2 col-md-4">
      <input class="btn btn-primary"<%= f.submit %>
      <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
    </div>
  </div>
</div>


<% end %>
