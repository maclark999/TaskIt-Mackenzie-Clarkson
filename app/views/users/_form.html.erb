<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
<%= render partial: "share/errors", locals: {error: @user} %>


<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :first_name %></label>
  <div class="form-controls col-md-4">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :last_name %></label>
  <div class="form-controls col-md-4">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :email %></label>
  <div class="form-controls col-md-4">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="control-label col-md-2"><%= f.label :password %></label>
  <div class="form-controls col-md-4">
    <%= f.password_field :password, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="actions">
    <div class="col-md-offset-2 col-md-4">
      <input class="btn btn-primary"<%= f.submit %>
      <% unless @user.id == nil %>
      <%= link_to 'Delete', user_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <% end %>
      <%= link_to 'Cancel', users_path, class: "btn btn-default" %>
    </div>
  </div>
</div>


<% end %>
