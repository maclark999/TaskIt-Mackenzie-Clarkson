<%= form_for(@task, html: {class: "form-horizontal"}) do |f| %>

<% if @task.errors.any? %>
<div class = "col-md-offset-2">
  <div id="error_explanation", class="alert alert-danger">
    <h4><%= pluralize(@task.errors.count, "error") %> prohibited this form from being saved:</h4>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>



    <div class="form-group">
        <label class="control-label col-md-2"><%= f.label :description %></label>
      <div class="form-controls col-md-4">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-md-2"><%= f.label :due_date %></label>
      <div class="form-controls col-md-4">
        <%= f.date_select :due_date, class: "form-control" %>
      </div>
    </div>

  <% unless @task.description == nil %>
    <div class="form-group">
      <label class="control-label col-md-2"><%= f.label :complete %></label>
      <div class="form-controls col-md-4">
        <%= f.check_box :complete %>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <div class="actions">
      <div class="col-md-offset-2 col-md-4">
        <input class="btn btn-primary"<%= f.submit %>
        <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>


<% end %>
